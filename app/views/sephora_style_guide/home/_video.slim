article#video
  h1.h1 Video

  section
    h3.h3 Default (Home)
    .container
      .row
        .col-12.col-md-6
          .media-container-lg
            .video-panel
              iframe width='100%' height='100%' src='//www.youtube.com/embed/RvY-YNMp-1w?rel=0&amp;autoplay=1&amp;loop=1&amp;mute=1&amp;playlist=RvY-YNMp-1w&amp;enablejsapi=1&amp;modestbranding=1' frameborder='0' allowfullscreen
              = link_to '#lg-video', data: { toggle: 'modal', video: 'lgVideo' }, class: 'video-link js-video-link' do
                .video-image-overlay
                = image_tag '//img.youtube.com/vi/RvY-YNMp-1w/maxresdefault.jpg', class: 'video-image-lg'
                .video-play-icon
            = link_to '#', class: 'video-link' do
              span.video-text-container
                p.video-text Discover masks that hydrate, brighten and soothe your skin

          .modal.fade.media-modal.js-video-modal#lg-video aria-hidden='true' role='dialog' tabindex='-1'
            .modal-dialog role='document'
              .modal-content
                .modal-header
                  = link_to '#', class: 'video-link'
                    .modal-title Discover masks that hydrate, brighten and soothe your skin
                  button.close type='button' data-dismiss='modal' aria-label='Close'
                .modal-body
                  .modal-video
                    iframe#lgVideo width='100%' height='100%' src='//www.youtube.com/embed/RvY-YNMp-1w?rel=0&amp;enablejsapi=1&amp;modestbranding=1' frameborder='0' allowfullscreen
